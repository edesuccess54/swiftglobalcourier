<%- include('../partials/head')  %> 
<body>

<!-- include the main navigation  -->
<%- include('../partials/nav')  %> 

<section class="sec-padding single-service-page">
	<div class="thm-container">
		<div class="row">
			<div class="col-md-12 tracking-container" style="margin: auto; overflow: auto;">
               
                <div class="loginForm-wrapper">
                    <form class="login-form">
                        <h2>Admin Login</h2>
                        <label for="email">Email</label>
                        <input id="email" type="text" name="email">

                        <label for="pwd">Password</label>
                        <input id="pwd" type="password" name="password">
                        <button class="btn" name="submit">Login</button>
						<span class="message" style="color: red; display: block; font-size: 1.1em; text-align: center;"></span>
                    </form>
                </div>

			</div>
		</div>
	</div>
</section>


<section class="footer-top">
	<div class="thm-container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-6">
					<h3>Logistic and cargo</h3>
					<p>Contact us now to get quote for all your global <br>shipping and cargo need.</p>
				</div>
				<div class="col-md-6">
					<a class="thm-btn" href="/contact">Contact Us <i class="fa fa-arrow-circle-right"></i></a>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	const loginForm = document.querySelector('.login-form');

	// lgin request 
	const loginAdmin = async (e) => {
		e.preventDefault();
		document.querySelector('.message').textContent = ""

		const email = loginForm.email.value;
		const password = loginForm.password.value;
		const loginBtn = loginForm.submit;

		const formData = { email, password };

		loginBtn.textContent = 'processing...';

		try {
			const url = '/admin/login'
			const response = await fetch(url, {
				method: 'POST', 
				headers: { 'Content-Type': 'application/json'},
				body: JSON.stringify(formData)
			})

			if(!response.ok){
				throw new Error("something went wrong")
			}

			const result = await response.json();
			loginBtn.textContent = 'Login';

			if(result.error) {
				throw new Error(result.error)
			}
			location.assign("/admin/dashboard")

		} catch (error) {
			document.querySelector('.message').textContent = error.message
			loginBtn.textContent = 'Login';
		}
	}

 	loginForm.addEventListener('submit', loginAdmin)
</script>


