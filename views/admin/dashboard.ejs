<%- include('./partials/header') %> 
    
    <main>
        <div class="mainWrapper">
             
            <%- include("./partials/sideBar") %> 
            <div class="rightContent">
                <%- include('./partials/topBar') %> 
                <div class="mainContent">
                    <section>
                        <div class="statistics">

                            <div class="created">
                                <div class="staticsInner">
                                    <span class="icon"><i class="fa-solid fa-truck-fast"></i></span>
                                    <span class="value">Total&nbsp;250</span>
                                </div>
                            </div>

                            <div class="transit">
                                <div class="staticsInner">
                                    <span class="icon"><i class="fa-solid fa-arrow-up-right-from-square"></i></span>
                                    <span class="value">Delivered &nbsp;100</span>
                                </div>
                            </div>

                            <div class="delivered">
                                <div class="staticsInner">
                                    <span class="icon"><i class="fa-solid fa-truck"></i></i></span>
                                    <span class="value">transit package&nbsp;50</span>
                                </div>
                            </div>

                        </div>
                    </section>

                    <section>
                        <div class="packageTable" style="overflow: scroll;">
                            <table id="myTable" class="hover row-border table is-striped" style="width:100%" >
                                <thead>
                                 
                                    <tr style="white-space: nowrap;">
                                        <th>Sender Name</th>
                                        <th>Sender Email</th>
                                        <th>Receiver Name</th>
                                        <th>Destination</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody style="white-space: nowrap;">
                                    <% for(let i = 0; i < packages.length; i++) { %>
                                    <tr>
                                        <td><%= packages[i].sendersName %></td>
                                        <td><%= packages[i].sendersEmail %></td>
                                        <td><%= packages[i].receiverName %></td>
                                        <td><%= packages[i].receiversAddress %></td>
                                      
                                        <td><%= packages[i].location %></td>
                                        <td><%= packages[i].status %></td>
                                        <td class="actionColumn">
                                            <span>
                                                <a href="../admin/edit/<%- packages[i]._id %>"><i class="fa-solid fa-pen-to-square edit"></i></a>
                                            </span>

                                            <span><i class="fa-solid fa-trash trash" data-id="<%- packages[i]._id %>"></i></span>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>

<%- include('./partials/footer') %> 
